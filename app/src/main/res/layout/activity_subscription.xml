<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_201a11">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                app:contentInsetStart="0dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/custom_font_hanb"
                android:gravity="center"
                android:text="구독하기"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <FrameLayout
                android:id="@+id/fl_charm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="11dp">

                <!--android:layout_width="28dp"-->
                <ImageView
                    android:id="@+id/iv_charm_top"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/gf_talisman" />
            </FrameLayout>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.4" />

            <ImageView
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/gf_coupon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6dp"
                android:text="토정비결, 꿈해몽, 사주, 궁합, 별자리 등\n다양한 서비스를 광고없이 열람하실 수 있습니다."
                android:textColor="@color/color_3f2520"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7" />

            <LinearLayout
                android:id="@+id/ll_subs_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:background="@drawable/gf_cpbox"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingTop="18dp"
                android:paddingRight="24dp"
                android:paddingBottom="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_check"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/sel_btn_check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="6dp"
                        android:text="1개월 구독권"
                        android:textColor="@color/color_3f2520"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6dp"
                        android:text="2,500"
                        android:textColor="@color/color_b83838"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6dp"
                        android:text="원 / 30일"
                        android:textColor="@color/color_3f2520"
                        android:textSize="13dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="4px"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/gf_dt_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="6dp"
                    android:text="각종 운세 및 서비스 광고없이 이용 가능"
                    android:textColor="@color/color_807474"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_subs_02"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:background="@drawable/gf_cpbox"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingTop="18dp"
                android:paddingRight="24dp"
                android:paddingBottom="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_check2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/sel_btn_check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="6dp"
                        android:text="3개월 구독권"
                        android:textColor="@color/color_3f2520"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6dp"
                        android:text="2,000"
                        android:textColor="@color/color_b83838"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6dp"
                        android:text="원 / 30일"
                        android:textColor="@color/color_3f2520"
                        android:textSize="13dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="4px"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/gf_dt_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="6dp"
                    android:text="각종 운세 및 서비스 광고없이 이용 가능"
                    android:textColor="@color/color_807474"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6" />

            <!--        <ImageView-->
            <!--            android:id="@+id/fl_share"-->
            <!--            android:layout_width="80dp"-->
            <!--            android:layout_height="80dp"-->
            <!--            android:layout_gravity="right|bottom"-->
            <!--            android:layout_marginRight="14dp"-->
            <!--            android:adjustViewBounds="true"-->
            <!--            android:src="@drawable/gf_kakao" />-->

            <FrameLayout
                android:id="@+id/fl_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/ll_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_auto_start="true"
                    app:shimmer_base_alpha="1"
                    app:shimmer_base_color="@color/white"
                    app:shimmer_colored="false"
                    app:shimmer_duration="2500"
                    app:shimmer_highlight_alpha="0.1">

                    <ImageView
                        android:id="@+id/iv_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/gf_morebutton" />

                </com.facebook.shimmer.ShimmerFrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="구독하기"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</layout>